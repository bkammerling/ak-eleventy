<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

	{% include "components/head.njk" %}

	<body>


		{% include "components/nav.njk" %}

		<div class="my-sm-4 py-sm-5"></div>

		<h3 id="page-title" class="sticky-top text-center">{{ title }}</h3>
		<div class="container text-center">
			<div class="row">
				<div class="col-md-10 offset-md-1">
					<h1><strong>{{ subtitle }}</strong></h1>
				</div>
			</div>
		</div>

		<div class="my-2 py-5"></div>


		<main>
			{{ layoutContent | safe }}

			{% for section in page_sections %}
			{% if section.type == 'wide_image' %}
				<div class="bg-image" style="background-image: url('{{ section.image }}')">
					<div class="text-center pt-4">
						{#<h6 class=" d-inline-block bg-white p-1">{{ section.caption }}</h6>{% endcomment %} #}
					</div>
				</div>
			{% else %}
				<section class="home-section {% if section.lighttext %}text-white{% endif %}" id="{{ section.id }}" style="
				background-color: {{ section.bgcolor }};
				{% if section.title == null %}padding-top: 20px;{% endif %}
				">
					<div class="container {% if section.title %}pt-5{% endif %}">
						{% if section.title %}<h2 class="text-center section-title">{{ section.title }}</h2>
						{% else %}
						<hr class="mb-5 pb-4">
						{% endif %}
						{% if section.prebody %}
						<div class="prebody d-flex justify-content-center py-4">
							{{ section.prebody | mdFilter | safe }}
						</div>
						{% endif %}
						<div class="row align-items-center">
							{% set colcount = section.cols | length %}
							{% for col in section.cols %}
							<div class="col-md-{{ 12/colcount }} px-lg-5 mb-4 mb-md-0">
								{{ col | mdFilter | safe }}
							</div>
							{% endfor %}
						</div>
						{% if section.postbody %}
						<div class="postbody d-flex justify-content-center py-5 px-lg-5">
								{{ section.postbody | mdFilter | safe }}
						</div>
						{% endif %}
					</div>
				</section>
			{% endif %}
			{% endfor %}

		</main>

		<section id="worked-with">
			<div class="container">
				<p class="text-center my-4">Proud to have worked with</p>
				<div class="px-lg-5 mx-xl-5 mb-5 d-flex flex-wrap justify-content-center align-items-center">
					<img src="/static/img/Heart N soul logo.jpg" />
					<img src="/static/img/southbank logo.png" />
					<img src="/static/img/Poetry-Society-logo.jpg" />
					<img src="/static/img/entelechy logo.jpeg" />
					<img src="/static/img/fostering network logo.jpeg" />
					<img src="/static/img/albany logo.jpeg" />
					<img src="/static/img/apples and snakes logo.png" />
					<img src="/static/img/Lewisham logo.png" />
					<img src="/static/img/Roundhouse logo.jpeg" />
					<img src="/static/img/first story logo.jpeg" />
				</div>
				<hr>
			</div>
		</section>

		<section id="adam-contact" class="py-5">
			<br><br>
			<div class="container">
				<h2 class="text-center section-title mb-2"><small>Let's Talk</small></h2>
				<p class="text-center my-4">For bookings requiring any of the above, pop me a message here or reach out to me at <a href="mailto:adamkammerling@gmail.com" title="Open your email client to send an email to adam">adamkammerling@gmail.com</a></p>
				<div style="max-width: 500px;" class="mx-auto">
					{% include "components/form.njk" %}
				</div>
				<hr>
			</div>

		</section>

		{% include "components/footer.njk" %}

	</body>

</html>
