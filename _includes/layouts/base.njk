<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

	{% include "components/head.njk" %}

	<body>

		<header>
			<div class="d-flex justify-content-between">
				{% include "components/nav.njk" %}
				{% include "components/social.njk" %}
			</div>
			<div class="container mt-5">
				<div class="text-center">
					<h3>Meet {{ metadata.title }}</h3>
					<div class="row">
						<div class="col-md-10 offset-md-1">
							<h1>{{ metadata.description }}</h1>
						</div>
					</div>
				</div>
			</div>
		</header>



		<main>
			{{ layoutContent | safe }}

			{% for page_section in page_sections %}
				{% for la_section in collections.home_sections %}
				<section class="home-section" style="background-color: #{{ la_section.data.bgcolor }};">
					<div class="container py-5">
						<h2 class="text-center">{{ la_section.data.title }}</h2>
						<div class="row">
							<div class="col-md-6">
								<p>{{ la_section.templateContent | safe }}</p>
							</div>
							<div class="col-md-6">
								<img src="{{ la_section.data.image }}" />
							</div>
					</div>
				</div>
				{% endfor %}
			{% endfor %}

		</main>

		{% include "components/footer.njk" %}

	</body>

</html>
